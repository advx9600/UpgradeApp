<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_my_netdisk_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/titlebar_background_netdisk" >

    <RelativeLayout
        android:id="@+id/top_center_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="@drawable/titlebar_center_layout_selector"
        android:clickable="true"
        android:paddingLeft="6.0dip"
        android:paddingRight="6.0dip"
        android:visibility="gone" >

        <TextView
            android:id="@+id/top_center_button_title"
            style="@style/NetDisk.AppTitleBar.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableRight="@drawable/ic_title_spinner_selector"
            android:duplicateParentState="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/icon_vertical_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:contentDescription="@null"
        android:gravity="center"
        android:orientation="horizontal"
        android:src="@drawable/titlebar_back_button_selector"
        android:visibility="gone" />

    <TextView
        android:id="@+id/top_title_center_layout"
        style="@style/NetDisk.AppTitleBar.Blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:duplicateParentState="true"
        android:ellipsize="middle"
        android:paddingLeft="77.0dip"
        android:paddingRight="77.0dip"
        android:singleLine="true"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/right_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/title_button_selector"
        android:clickable="true"
        android:contentDescription="@null"
        android:gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/top_title_right_layout"
        android:layout_width="64.0dip"
        android:layout_height="32.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8.0dip"
        android:background="@drawable/titlebar_common_button_selector"
        android:clickable="true"
        android:gravity="center" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/top_right_textview"
                style="@style/NetDisk.TextAppearance.Middle.TitleWhite"
                android:layout_width="wrap_content"
                android:layout_height="30.0dip"
                android:layout_gravity="center_vertical"
                android:duplicateParentState="true"
                android:gravity="center"
                android:singleLine="true"
                android:visibility="visible" />


        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/right_btn_tag"
        android:layout_width="10.0dip"
        android:layout_height="10.0dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="5.0dip"
        android:background="@drawable/icon_tip"
        android:contentDescription="@null"
        android:visibility="gone" />

</RelativeLayout>